<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <TextView
        android:id="@+id/listview_layout_itemname_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:textSize="30dp"/>

    <ImageButton
        android:id="@+id/listview_layout_sub_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/sub"/>

    <EditText
        android:id="@+id/listview_layout_item_quantity_edit"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@mipmap/button_rectangle"
        android:inputType="numberDecimal"
        android:layout_gravity="center_vertical"/>

    <ImageButton
        android:id="@+id/listview_layout_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/add"/>

</LinearLayout>