<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="scu.edu.storemanage">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.FLASHLIGHT"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.zxing.activity.CaptureActivity" >
        </activity>

        <!--登录界面-->
        <activity android:name="scu.edu.storemanage.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!--注册界面-->
        <activity android:name=".activity.SignInActivity">
        </activity>

        <!--主功能界面-->
        <activity android:name=".activity.MainFunctionActivity"
            android:launchMode="singleTask">
        </activity>

        <!--录入商品界面-->
        <activity android:name=".activity.InputItemActivity">
        </activity>

        <!--售卖商品界面-->
        <activity android:name=".activity.SellItemActivity">
        </activity>

        <!--查询商品界面-->
        <activity android:name=".activity.SearchItemActivity">
        </activity>

        <!--分析数据界面-->
        <activity android:name=".activity.AnalyseDataActivity">
        </activity>

        <!--订单界面-->
        <activity android:name=".activity.OrderActivity">
        </activity>

        <!--会员界面-->
        <activity android:name=".activity.MemberActivity">
        </activity>

        <!--增加会员界面-->
        <activity android:name=".activity.AddMemberActivity">
        </activity>

        <!--修改会员信息界面-->
        <activity android:name=".activity.ChangeMemberInfoActivity">
        </activity>

        <!--选择会员界面-->
        <activity android:name=".activity.ChooseCustomerInfo">
        </activity>

        <!--订单信息界面-->
        <activity android:name=".activity.OrderInfoActivity">
        </activity>
    </application>

</manifest>
